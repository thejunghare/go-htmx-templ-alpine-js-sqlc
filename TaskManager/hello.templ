package main

import "github.com/thejunghare/models"

templ Hello(name string, tasks []models.Tasks) {
	<div class="p-4">
		<h1 class="text-2xl font-bold">Hello, { name }</h1>
		<ul class="mt-4 list-disc list-inside">
			for _, task := range tasks {
				<li>{ task.Name } </li>
			}
		</ul>
	</div>
}
